{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "outDir": "../../dist/out-tsc/packages/mtg-api",
    "declaration": true,
    "importHelpers": false,
    "types": ["node"]
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.e2e.ts",
    "jest.config.ts",
    "vite.config.ts",
    "vite.config.mts",
    "vitest.config.ts",
    "vitest.config.mts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx"
  ],
  "include": ["**/*.ts", "**/*.mts"]
}
